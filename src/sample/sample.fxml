<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane hgap="5.0" prefHeight="100.0" prefWidth="320.0" vgap="5.0"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MyController">
    <columnConstraints>
        <ColumnConstraints prefWidth="100" />
        <ColumnConstraints prefWidth="200" />
        <ColumnConstraints prefWidth="20" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="24.0" />
        <RowConstraints prefHeight="24.0" />
        <RowConstraints prefHeight="24.0" />
    </rowConstraints>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0">Username:</Label>
    <ComboBox fx:id="cbOperators" onAction="#On_cbOperatorsAction" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <TextField fx:id="txtUsername" prefWidth="140" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1">Password:</Label>
    <PasswordField fx:id="pwPassword" prefWidth="140" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button fx:id="btnLogin" alignment="CENTER" onAction="#On_btnLoginClick" prefHeight="27.0" prefWidth="193.0" text="Open the system"
            GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
        <GridPane.margin>
            <Insets top="5.0" />
        </GridPane.margin>
        <padding>
            <Insets bottom="5.0" top="5.0" />
        </padding></Button>
</GridPane>